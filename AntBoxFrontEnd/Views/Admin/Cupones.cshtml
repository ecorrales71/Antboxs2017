                    <i class="fa fa-archive"></i>
                    <span class="title">Administración de Usuarios</span>
                    <div class="divider"></div>
                    <span class="subtitle">Almacenamiento Seguro, Fácil y Conveniente</span>
                </div>
            </div>
        </div>
    </header>
    <!-- /.pagetitle -->
    <!-- CONTENT -->
    <div class="content seguros">
        <!-- CONTAINER -->
        <div class="container">
            <div class="row irow-xs">
                <div class="col-sm-12">
                    <h1>Cupones</h1>
                </div>
            </div>
        </div>
        <!-- /.container -->
        <!-- CONTAINER -->
        <div class="container mt30">

            <div class="row">
                <div class="col-sm-12">
                    <div class="table-responsive">
                        @Html.Hidden("idpagination", @Model.Coupons.Pagination_id)
                        @Html.Hidden("total", @Model.Coupons.Total)
                        @Html.Hidden("pages", @Model.Coupons.Pages)
                        <table id="tabla-coupon" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Cupón</th>
                                    <th>Cantidad</th>
                                    <th>Porcentaje</th>
                                    <th>Inicio</th>
                                    <th>Vigencia</th>
                                    <th>Creado por</th>
                                    <th>Creación</th>
                                    <th>Estatus</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Coupons != null)
                                {
                                    foreach (var item in Model.Coupons.Coupons)
                                    {
                                    <tr>
                                        <td><input type="checkbox" data-id="@item.Id" class="select-coupon" /></td>
                                        <td class="tname">@item.Name</td>
                                        <td class="tquantity">@item.Quantity</td>
                                        <td class="tdiscount">@item.Discount%</td>
                                        <td class="tfrom">@item.From</td>
                                        <td class="tto">@item.To</td>
                                        <td class="tcreated">-</td>
                                        <td class="tdatecreated">-</td>
                                        <td class="tstatus">@item.Statusname</td>
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
