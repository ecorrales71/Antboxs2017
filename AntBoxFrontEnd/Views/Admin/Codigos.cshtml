                        <div class="col-sm-6 pl0_modal">
                            <div class="form-group">
                                <label for="send-form-name">Longitud</label>
                                <input type="text" name="name" id="send-form-name">
                            </div>
                            <div class="form-group">
                                <label for="textbox">Fecha</label>
                                <div class="input-group mb0">
                                    <span class="input-group-btn">
                                        <button type="button" id="actualizacion_edit" class="btn btn-primary pull-right"><i class="fa fa-calendar"></i></button>
                                    </span>
                                    <input class="form-control" type="text" id="fecha_actualizacion_edit" name="fecha_actualizacion_edit">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="form-select">Estatus</label>
                                <select id="form-select" class="select_codigo">
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo">Inactivo</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <input type="submit" class="btn btn-primary btn-wide pull-right mt10" value="Crear">
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- /.modal -->
