    Calendar.setup({
        inputField: "fecha_actualizacion",      // id del campo de texto
        ifFormat: "%Y-%m-%d",       // formato de la fecha, cuando se escriba en el campo de texto
        button: "actualizacion"   // el id del botón que lanzará el calendario
    });
</script>
