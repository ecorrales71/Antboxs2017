@model AntBoxFrontEnd.Services.Customer.CustomerResponse
@{
    ViewBag.Title = "Index";
}

<div class="wrapper">
    <!-- CONTENT -->
    <div class="content cuenta">
        <!-- CONTAINER -->
        <div class="container">
            <div class="row irow-xs">
                <div class="col-sm-12">
                    <h1>Cuenta</h1>
                    <div class="heading-divider"></div>
                </div>
            </div>
        </div>
        <!-- /.container -->
        <!-- CONTAINER -->
        <div class="container mt30">
            <div class="row">
                <div class="col-md-3 pr0 no_portrait">
                    @Html.Partial("_LeftMenu")
                </div>
                <div class="col-md-9">
                    <div class="row pl30 pr30">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="irow-xs pb30">
                                    <h3>Datos personales</h3>
                                    <p>Completa los campos con tus datos personales y mantenlos actualizados. Recuerda guardar tu contraseña en un lugar seguro.</p>
                                </div>
                            </div>
                            <div class="col-sm-6 text-center">
                                <a href="">
                                    <img class="img-lg" src="images/perfil.jpg" width="200" height="200" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="row pl30 pr30">
                            <form action="" method="post" class="contact-form form-solid" novalidate>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="send-form-name">Nombre(s)*</label>
                                            <input type="text" name="name" id="send-form-name" value="@Model.Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="send-form-email">Apellido Paterno*</label>
                                            <input type="text" name="email" id="send-form-email" value="@Model.LastName">
                                        </div>
                                        <div class="form-group">
                                            <label for="send-form-email">Apellido Materno*</label>
                                            <input type="text" name="email" id="send-form-email">
                                        </div>
                                        <div class="form-group">
                                            <label for="send-form-email">E-mail*</label>
                                            <input type="text" name="email" id="send-form-email"  value="@Model.Email">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="send-form-email">Teléfono*</label>
                                            <input type="text" name="email" id="send-form-email"  value="@Model.Phone">
                                        </div>
                                        <div class="form-group">
                                            <label for="send-form-name">Celular</label>
                                            <input type="text" name="name" id="send-form-name" value="@Model.Mobile_phone">
                                        </div>
                                        <div class="form-group">
                                            <label for="send-form-email">Contraseña*</label>
                                            <input type="password" name="email" id="send-form-email">
                                        </div>
                                        <div class="form-group">
                                            <label for="send-form-email">Confirmar Contraseña*</label>
                                            <input type="password" name="email" id="send-form-email">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 mt10">
                                        <input type="submit" class="btn btn-primary btn-wide pull-right mt10" value="Guardar">
                                        <p class="succs-msg">Мensaje enviado</p>
                                    </div>
                                </div>
                            </form>
                            <div class="row">
                                <div class="col-sm-12">
                                    <hr class="hr-dashed mt0 mb30" />
                                </div>
                            </div>
                            <button type="button" class="btn btn-primary btn-sm pull-right btn_blue pull-left" onclick="eliminarCuenta()">Eliminar Cuenta</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content -->

</div>
<!-- /.wrapper -->